<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech42.sathish.inventorymanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.LoginActivity">

        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.ImportActivity" />
        <activity
            android:name=".activity.ProductsActivity"
            android:label="Products"
            android:theme="@style/AppTheme2" />
        <activity android:name=".activity.ExportActivity" />
        <activity
            android:name=".activity.ImportTransactionsActivity"
            android:label="Import Transaction"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.ExportTransactionsActivity"
            android:label="Export Transaction"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.DashboardActivity"
            android:label="Dashboard"
            android:theme="@style/Theme.MyCompatTheme">

        </activity>
        <activity android:name=".activity.LabSelectionActivity"></activity>

        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>