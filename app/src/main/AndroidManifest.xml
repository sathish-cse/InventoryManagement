<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech42.sathish.inventorymanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.ImportActivity" />
        <activity
            android:name=".activity.ProductsActivity"
            android:label="Products"
            android:theme="@style/AppTheme2" />
        <activity android:name=".activity.ExportActivity" />
        <activity
            android:name=".activity.ImportTransactionsActivity"
            android:label="Import Transaction"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.ExportTransactionsActivity"
            android:label="Export Transaction"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.DashboardActivity"
            android:label="Dashboard"
            android:theme="@style/Theme.MyCompatTheme">

            <!-- to identify this activity as "searchable" -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activity.LabSelectionActivity"></activity>
    </application>

</manifest>